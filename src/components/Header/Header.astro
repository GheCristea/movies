---
import Logo from "../common/Logo.astro";

const links = [
  { title: "Home", href: "/" },
  { title: "About", href: "/about" },
  { title: "Blog", href: "/blog" },
];
---

<nav class="bg-white border-secondary">
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
  <Logo />
    </button>
    <div class="w-full md:block md:w-auto" id="navbar-default">
      <ul
        class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-secondary rounded-lg md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0"
      >
        {
          links.map((link) => (
            <li>
              <a
                href={link.href}
                class="block py-2 px-3 text-gray-900 rounded md:border-0 md:p-0 hover:text-primaryHover"
              >
                {link.title}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>
