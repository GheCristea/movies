---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="w-full min-w-[300px] border border-gray-200 rounded-s">
	<a href={href}>
		<h2 class="text-2xl font-bold">
			{title}
			<span>&rarr;</span>
		</h2>
		<p class="text-lg">
			{body}
		</p>
	</a>
</li>
